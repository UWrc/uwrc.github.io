{
  // Configuration for the site preview codespace
  "name": "Site Preview",
  // Uses the _ base image
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    // Install git, node,js, ... to codespace
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": "false"
    },
    "ghcr.io/devcontainers/features/node:1": {
	"version": "none"
    },
    "ghcr.io/martinaskestad/features/vimsrc:1": {
	"version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      // Install a spell check extension to VSCode
      "extensions": [
        "streetsidesoftware.code-spell-checker"
      ]
    }
  },
  // export the required node options as required by the readme then install and build with yarn
  "postCreateCommand": "export NODE_OPTIONS=--openssl-legacy-provider && yarn install && yarn build"
}
